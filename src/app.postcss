@tailwind base;
@tailwind components;
@tailwind utilities;

* {
	scrollbar-width: thin;
	scrollbar-color: theme("colors.orange.500") white;
	scroll-behavior: smooth;
}
.dark * {
	scrollbar-color: theme("colors.amber.600") theme("colors.stone.900");
}

html {
	overflow: hidden;
}

body {
	scrollbar-gutter: stable;
	overflow-y: auto;
	max-height: 100dvh;
}
